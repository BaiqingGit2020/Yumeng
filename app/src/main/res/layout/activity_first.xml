<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/text_write"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/txt_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_first"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_first_text"
            android:text="首页"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_look"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_look"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_look_text"
            android:text="商品"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_message"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_message_text"
            android:text="服务"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_gift"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_gift_text"
            android:text="消息"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_my"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_my_text"
            android:text="我的"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/text_gray"
        android:layout_above="@+id/tab_menu"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:background="@color/transparent">
    </FrameLayout>
</RelativeLayout>