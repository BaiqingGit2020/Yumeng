<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/my_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/text_green"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/text_green"
            app:tabTextColor="@color/text_gray" />
        <android.support.v4.view.ViewPager
            android:id="@+id/my_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/item_server"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_chat"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_first_text"
            android:text="服务"/>
        <TextView
            android:id="@+id/item_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Item_yellow"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_car"
            android:gravity="center"
            android:textColor="@color/text_write"
            android:text="加入购物车"/>
        <TextView
            android:id="@+id/item_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/Item_red"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_buy"
            android:gravity="center"
            android:textColor="@color/text_write"
            android:text="立即购买"/>
    </LinearLayout>

</RelativeLayout>

